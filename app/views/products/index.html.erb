<h1>Welcome to Super Products Marketplace</h1>

<h2>Add an item to cart</h2>
<%= form_tag products_add_path, method: "get" do %>
  <%= text_field_tag "product" %>
  <%= submit_tag "add to cart" %>
<% end %>

<h2>Your cart:</h2>
<ul>
  <% cart.each do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>
